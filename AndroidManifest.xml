<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hornets.kplanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hornets.kplanner.activities.HomeActivity"
            android:label="@string/app_name" >
            
        </activity>
        <activity
            android:name="com.hornets.kplanner.activities.ExpensesActivity"
            android:label="@string/title_activity_expenses"
            android:parentActivityName="com.hornets.kplanner.activities.HomeActivity" >
        </activity>
        <activity
            android:name="com.hornets.kplanner.activities.IncomeActivity"
            android:label="@string/title_activity_income"
            android:parentActivityName="com.hornets.kplanner.activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hornets.kplanner.PlannerActivity" />
        </activity>
        <activity
            android:name="com.hornets.kplanner.activities.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hornets.kplanner.activities.NewUserActivity"
            android:label="@string/title_activity_new_user"
            android:parentActivityName="com.hornets.kplanner.activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hornets.kplanner.activities.LoginActivity" />
        </activity>
    </application>

</manifest>
